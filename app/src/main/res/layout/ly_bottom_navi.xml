<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>


    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_title_height">

        <LinearLayout
            android:id="@+id/ly_zone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <org.hutcwp.gifts.view.QQMenu
                android:id="@+id/qqmenu_left"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true" />

            <TextView
                style="@style/tv_bottom_title"
                android:text="动态" />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <org.hutcwp.gifts.view.QQMenu
                android:id="@+id/qqmenu_middle"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true" />

            <TextView
                style="@style/tv_bottom_title"
                android:text="主页" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginRight="20dp"
            android:id="@+id/ly_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">


            <org.hutcwp.gifts.view.QQMenu
                android:id="@+id/qqmenu_right"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true" />

            <TextView
                style="@style/tv_bottom_title"
                android:text="个人中心" />

        </LinearLayout>


    </RelativeLayout>


</layout>

